<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:NotesAppMAUI.ViewModel"
             xmlns:vmo="clr-namespace:NotesAppMAUI.ViewModel.VMO"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="NotesAppMAUI.View.TaskItem"
             x:DataType="vm:TaskItemVM"
             Title="Task">

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding EditCommand}" Text="Edit">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                  FontFamily="MaterialIcons-Regular"
                  Glyph="&#xe3c9;"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <Grid>
            <Grid IsVisible="{Binding EditModeEnabled}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="500" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="1" Text="Text: " VerticalOptions="Start" Padding="5" />
                <Label Grid.Row="2" Text="Due Date: " VerticalOptions="Center" Padding="5" />
                <Label Grid.Row="3" Text="Progress: " VerticalOptions="Center" Padding="5" />
                <Label Grid.Row="4" Text="Assigned User: " VerticalOptions="Center" Padding="5" />

                <Editor Grid.Column="1" Grid.Row="1" Text="{Binding TaskItem.Text}" HeightRequest="100" />
                <HorizontalStackLayout Grid.Column="1" Grid.Row="2">
                    <DatePicker Date="{Binding TaskItem.DueDate}" VerticalOptions="Center" />
                    <TimePicker Time="{Binding Time}" VerticalOptions="Center" />
                </HorizontalStackLayout>
                <Slider Grid.Column="1" Grid.Row="3" Value="{Binding TaskItem.Progress}" />
                <Picker Grid.Column="1" Grid.Row="4" SelectedItem="{Binding TaskItem.AssignedUser}" ItemsSource="{Binding AvaliableUsers}" ItemDisplayBinding="{Binding NameToShow}" IsEnabled="{Binding TaskItem.Permission.CanAssign}" />
                
                <VerticalStackLayout Grid.Row="5" Grid.ColumnSpan="2">
                    <HorizontalStackLayout>
                        <Button Command="{Binding SaveCommand}" Text="&#xe161; SAVE" FontFamily="MaterialIcons-Regular" />
                        <Button Command="{Binding DeleteCommand}" Text="&#xe872; DELETE" FontFamily="MaterialIcons-Regular" TextColor="Red"/>
                    </HorizontalStackLayout>
                    <Label Text="{Binding ErrorMessage}" TextColor="Red" />
                </VerticalStackLayout>
            </Grid>
            <Grid IsVisible="{Binding EditModeEnabled, Converter={toolkit:InvertedBoolConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <ProgressBar Grid.ColumnSpan="2" Progress="{Binding TaskItem.Progress}" ScaleY="5" HeightRequest="10" IsVisible="{Binding TaskItem.Permission.CanProgress, Converter={toolkit:InvertedBoolConverter}}" />
                <Slider Grid.ColumnSpan="2" Value="{Binding TaskItem.Progress}" IsVisible="{Binding TaskItem.Permission.CanProgress}" DragCompletedCommand="{Binding ProgressChangedCommand}" />
                
                <Label Grid.Row="1" Text="{Binding TaskItem.Text}" LineBreakMode="WordWrap" />

                <VerticalStackLayout Grid.Column="1" Grid.Row="1"  VerticalOptions="Start" HorizontalOptions="End">
                    <HorizontalStackLayout HorizontalOptions="End">
                        <Label Text="Assigned to: " FontSize="Caption" Margin="5,0,5,0" IsVisible="{Binding TaskItem.AssignedUserNotNull}" />
                        <Label Text="{Binding TaskItem.AssignedUser.NameToShow}"  FontSize="Caption" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout HorizontalOptions="End">
                        <Label Text="Due: " FontSize="Caption" Margin="5,0,5,0" IsVisible="{Binding TaskItem.DueDateHasValue}" />
                        <Label Text="{Binding TaskItem.DueDate}"  FontSize="Caption" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </ScrollView>

</ContentPage>
